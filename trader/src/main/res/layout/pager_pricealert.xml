<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_addpricealert"
        android:layout_alignParentTop="true"
        android:text="Add Alert"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:clickable="true"
        android:padding="5dp"
        android:background="@drawable/balanceback"
        android:layout_margin="10dp"/>

    <View
        android:id="@+id/pricealert_spacer1"
        android:layout_below="@id/btn_addpricealert"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/LightGrey"/>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/pricealert_spacer1"
        android:layout_alignParentBottom="true"
        android:id="@+id/lv_pricealerts"/>
</RelativeLayout>